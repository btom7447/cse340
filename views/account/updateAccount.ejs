<% if(title) { %>
    <h1 class="title"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<% if (notice && notice.length > 0) { %>
    <div class="notice">
      <% notice.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <!-- Validation Errors -->
  <% if (errors && errors.array && errors.array().length > 0) { %>
    <div class="errors">
      <ul>
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

<!-- Account Update Form -->
  <section class="section-update">
    <form method="post" action="/account/updateAccount/<%= accountData.account_id %>" class="form">
      <div class="form-group">
        <label for="account_id" class="form-label">Account ID</label>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>" class="form-input">
      </div>

      <div class="form-group">
        <label for="account_firstname" class="form-label">First Name</label>
        <input type="text" 
          name="account_firstname" 
          id="account_firstname" 
          value="<%= (typeof accountData.account_firstname !== 'undefined') ? accountData.account_firstname : '' %>" 
          required class="form-input">
      </div>

      <div class="form-group">
        <label for="account_lastname" class="form-label">First Name</label>
       <input type="text" 
             name="account_lastname" 
             id="account_lastname" 
             value="<%= (typeof accountData.account_lastname !== 'undefined') ? accountData.account_lastname : '' %>" 
             required class="form-input">
      </div>
      
      <div class="form-group">
        <label for="account_email" class="form-label">Email</label>
       <input type="email" 
             name="account_email" 
             id="account_email" 
             value="<%= (typeof accountData.account_email !== 'undefined') ? accountData.account_email : '' %>" 
             required class="form-input">
      </div>

      <button type="submit"  class="btn btn-primary">Update Information</button>
    </form>
  </section>

<!-- Change Password Form -->
  <section class="password">
    <h2>Change Password</h2>
    <p>
      Enter a new password below. This will replace your current password.  
      <br>Passwords must be at least 12 characters long and include a number, uppercase, lowercase, and special character.
    </p>
    <form method="post" action="/account/changePassword/<%= accountData.account_id %>" class="form">
      <div class="form-group">
        <label for="account_id" class="form-label">Account ID</label>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>" class="form-input">
      </div>

      <div class="form-group">
        <label for="account_password" class="form-label">New Password</label>
        <input type="password" 
          name="account_password" 
          id="account_password" 
          required 
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
          title="Must be at least 12 characters and include uppercase, lowercase, number, and special character."
          class="form-input"
        >
        <label class="checkbox-label">
          <input type="checkbox" id="togglePassword" class="checkbox-input" />
          Show Password
        </label>
        <small class="form-hint">
          Password must be at least 12 characters, include 1 uppercase letter, 1 number, and 1 special character.
        </small>
      </div>

      <button type="submit" class="btn btn-primary">Login</button>

    </form>
  </section>