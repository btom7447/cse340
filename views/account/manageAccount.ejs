<% if(title) { %>
    <h1 class="title"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<% if (notice && notice.length > 0) { %>
    <div class="notice">
      <% notice.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

<% if (accountData) { %>
  <section class="account-dashboard">
    <h2>
      Welcome <span><%= accountData.account_firstname %> <%= accountData.account_lastname %></span>
    </h2>
    <p class="intro">Manage your account and access tools below.</p>

    <!-- Account Information Display Section For Enhancement Project -->
     <div class="account-info">
      <h4>Your Account Information</h4>
      <ul>
        <li><strong>First Name: </strong><%= accountData.account_firstname %></li>
        <li><strong>Last Name: </strong><%= accountData.account_lastname %></li>
        <li><strong>Email: </strong><%= accountData.account_email %></li>
        <li><strong>Account_ID: </strong><%= accountData.account_id %></li>
        <li><strong>Account Type: </strong><%= accountData.account_type %></li>
      </ul>
     </div>
    <!-- Account Update Section -->
    <div class="account-actions">
      <a href="/account/updateAccount/<%= accountData.account_id %>" class="btn btn-primary">
        Update Your Account Information
      </a>

      <% if (accountData.account_type !== "Employee" && accountData.account_type !== "Admin") { %>
        <div class="management-section">
          <h2>Need to meet with our staffs?</h2>
          <a href="/appointments/book" class="btn btn-primary">
            Book an Appointment
          </a>
        </div>
      <% } %> 

      <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
        <div class="management-section">
          <h3>Inventory Management</h3>
          <a href="/inv/" class="btn secondary">
            Go to Inventory Management
          </a>
        </div>
      <% } %>
    </div>
  </section>
<% } else { %>
  <section class="account-login-prompt">
    <h2>Please log in to view your account management page.</h2>
    <a href="/account/login" class="btn danger">Go to Login</a>
  </section>
<% } %>
