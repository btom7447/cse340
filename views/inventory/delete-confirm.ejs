<% if(title) { %>
    <h1 class="title"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>


  <form action="/inv/delete" method="post" class="inventory-form">
    <!-- Delete Warning Message -->
    <p class="delete">Confirm Deletion - The delete is permanent.</p>

    <!-- Make -->
    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make || '' %>" readonly>

    <!-- Model -->
    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model || '' %>" readonly>

    <!-- Price -->
    <label for="inv_price">Price</label>
    <div class="currency-input">
      <input type="number" id="inv_price" name="inv_price" step="0.01" required value="<%= inv_price || '' %>" class="price-input" readonly>
    </div>

    <!-- Year -->
    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" required value="<%= inv_year || '' %>" readonly>

    <button type="submit">Delete Vehicle</button>

    <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>">
    <% } %>

  </form>